{
  "name": "cv-builder-ai-setup",
  "version": "1.0.0",
  "description": "تعليمات سريعة لإعداد نظام CV Builder بالذكاء الاصطناعي",
  "scripts": {
    "setup:backend": "cd ../tf1-backend && npm install openai",
    "setup:frontend": "npm install lucide-react react-hot-toast",
    "setup:all": "npm run setup:backend && npm run setup:frontend",
    "start:backend": "cd ../tf1-backend && npm run start:dev",
    "start:frontend": "npm run dev",
    "start:all": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "notes": {
    "ar": "لا تنسى إضافة OPENAI_API_KEY في ملف .env للـ Backend",
    "en": "Don't forget to add OPENAI_API_KEY to Backend .env file"
  },
  "dependencies_needed": {
    "backend": [
      "openai@^4.20.0"
    ],
    "frontend": [
      "lucide-react@^0.300.0",
      "react-hot-toast@^2.4.1"
    ]
  },
  "environment_variables": {
    "backend": {
      "OPENAI_API_KEY": "sk-proj-YOUR_API_KEY_HERE",
      "OPENAI_MODEL": "gpt-4"
    }
  },
  "quickstart": {
    "step1": "Get OpenAI API Key from https://platform.openai.com/api-keys",
    "step2": "cd tf1-backend && npm install openai",
    "step3": "Add OPENAI_API_KEY to tf1-backend/.env",
    "step4": "cd tf1-frontend && npm install lucide-react react-hot-toast",
    "step5": "npm run start:backend (in tf1-backend)",
    "step6": "npm run dev (in tf1-frontend)",
    "step7": "Open http://localhost:3000/jobs/cv-builder"
  },
  "documentation": {
    "comprehensive_analysis": "./CV_SYSTEM_COMPREHENSIVE_ANALYSIS.md",
    "implementation_guide": "./CV_REBUILD_IMPLEMENTATION_GUIDE.md",
    "final_summary": "./CV_REBUILD_FINAL_SUMMARY.md",
    "quick_readme": "./CV_BUILDER_README.md"
  }
}
